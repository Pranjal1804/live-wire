{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "maestro-overlay",
  "version": "1.0.0",
  "identifier": "com.maestro.overlay",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:8000 http://localhost:8000; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src https://fonts.gstatic.com"
    },
    "windows": [
      {
        "label": "main",
        "title": "MAESTRO",
        "width": 380,
        "height": 900,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "shadow": false,
        "resizable": true,
        "focus": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": { "depends": [] }
    }
  }
}
